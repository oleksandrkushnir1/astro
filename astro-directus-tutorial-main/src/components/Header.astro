---
const currentPath = Astro.url.pathname;
---

<header class="bg-white shadow-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <!-- Logo/Brand -->
      <div class="flex-shrink-0 flex items-center">
        <a href="/" class="text-2xl font-bold text-indigo-600">Logo</a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden sm:ml-6 sm:flex sm:items-center">
        <div class="flex space-x-4">
          <a
            href="/"
            class={`px-3 py-2 rounded-md text-sm font-medium ${currentPath === "/" ? "bg-indigo-100 text-indigo-700" : "text-gray-700 hover:bg-gray-100"}`}
          >
            Home
          </a>
          <a
            href="/works"
            class={`px-3 py-2 rounded-md text-sm font-medium ${currentPath.startsWith("/works") ? "bg-indigo-100 text-indigo-700" : "text-gray-700 hover:bg-gray-100"}`}
          >
            Works
          </a>
          <a
            href="/login"
            class={`px-3 py-2 rounded-md text-sm font-medium ${currentPath === "/login" ? "bg-indigo-100 text-indigo-700" : "text-gray-700 hover:bg-gray-100"}`}
          >
            Login
          </a>
        </div>
      </div>

      <!-- Mobile menu button -->
      <div class="flex items-center sm:hidden">
        <button
          type="button"
          class="mobile-menu-button inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500"
          aria-controls="mobile-menu"
          aria-expanded="false"
        >
          <span class="sr-only">Open main menu</span>
          <!-- Icon when menu is closed -->
          <svg
            class="block h-6 w-6"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
          <!-- Icon when menu is open -->
          <svg
            class="hidden h-6 w-6"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile menu, show/hide based on menu state. -->
  <div class="hidden sm:hidden" id="mobile-menu">
    <div class="px-2 pt-2 pb-3 space-y-1">
      <a
        href="/"
        class={`block px-3 py-2 rounded-md text-base font-medium ${currentPath === "/" ? "bg-indigo-100 text-indigo-700" : "text-gray-700 hover:bg-gray-100"}`}
      >
        Home
      </a>
      <a
        href="/works"
        class={`block px-3 py-2 rounded-md text-base font-medium ${currentPath.startsWith("/works") ? "bg-indigo-100 text-indigo-700" : "text-gray-700 hover:bg-gray-100"}`}
      >
        Works
      </a>
      <a
        href="/login"
        class={`block px-3 py-2 rounded-md text-base font-medium ${currentPath === "/login" ? "bg-indigo-100 text-indigo-700" : "text-gray-700 hover:bg-gray-100"}`}
      >
        Login
      </a>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  document.addEventListener("DOMContentLoaded", () => {
    const button = document.querySelector(".mobile-menu-button");
    const menu = document.getElementById("mobile-menu");
    const iconOpen = button?.querySelector("svg:nth-child(2)");
    const iconClosed = button?.querySelector("svg:nth-child(3)");

    button?.addEventListener("click", () => {
      menu?.classList.toggle("hidden");
      iconOpen?.classList.toggle("hidden");
      iconOpen?.classList.toggle("block");
      iconClosed?.classList.toggle("hidden");
      iconClosed?.classList.toggle("block");
    });
  });
</script>
